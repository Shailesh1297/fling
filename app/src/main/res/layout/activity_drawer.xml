<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"


    tools:context=".drawer">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:background="@drawable/ic_createdbg"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:gravity="center"
    android:layout_weight="0.8"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="30dp"
        android:layout_marginTop="-30dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/back"
            android:background="@drawable/ic_arrow_back_black_24dp"
            />
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/dp"
        android:src="@drawable/ic_businessman"

        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Vivek Rawat"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:textSize="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kotdwar, uttrakhand"
        android:textColor="@color/white"
        android:fontFamily="cursive"
        android:textSize="20dp"
        android:id="@+id/address"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"

        >
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          
          android:orientation="vertical"
          >
          <androidx.cardview.widget.CardView
              android:layout_width="145dp"
              android:layout_height="145dp"
              android:layout_gravity="center"
              android:layout_marginBottom="30dp"
              android:id="@+id/home"

              >
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center"

                  >
              <ImageView
                  android:layout_width="50dp"
                  android:layout_height="50dp"

                  android:id="@+id/homeButton"


                  android:src="@drawable/ic_new_home"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/theme"
                  android:text="Home"
                  android:textSize="15dp"


                  />
              </LinearLayout>
          </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:layout_width="145dp"
              android:layout_height="145dp"
              android:layout_gravity="center"
              android:layout_marginBottom="30dp"
              android:id="@+id/chat"

              >
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center"

                  >

                  <ImageView
                      android:id="@+id/chatButton"
                      android:layout_width="50dp"
                      android:layout_height="50dp"

                        android:backgroundTint="@color/black"
                      android:src="@drawable/ic_new_chat" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/theme"
                      android:text="Chats"
                      android:textSize="15dp"


                      />
              </LinearLayout>
          </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:layout_width="145dp"
              android:layout_height="145dp"
              android:layout_gravity="center"
              android:id="@+id/review"

              >
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center"

                  >
                  <ImageView
                      android:layout_width="50dp"
                      android:layout_height="50dp"

                      android:id="@+id/reviewButton"


                      android:src="@drawable/ic_baseline_rate_review_24"
                      />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/theme"
                      android:text="Rate and Review"
                      android:textSize="15dp"


                      />
              </LinearLayout>
          </androidx.cardview.widget.CardView>

      </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
           
            
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:id="@+id/profile"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"

                    >

                    <ImageView
                        android:id="@+id/profileButton"
                        android:layout_width="50dp"
                        android:layout_height="38dp"


                        android:src="@drawable/ic_businessman" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme"
                        android:text="Profile"
                        android:textSize="15dp"


                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:id="@+id/passwordChange"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"

                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:id="@+id/passwordButton"


                        android:src="@drawable/ic_lock_open_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme"
                        android:text="Change Password"
                        android:textSize="15dp"


                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:layout_gravity="center"
                android:id="@+id/logout"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"

                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:id="@+id/logoutButton"


                        android:src="@drawable/ic_baseline_power_settings_new_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme"
                        android:text="Logout"
                        android:textSize="15dp"


                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
</RelativeLayout>