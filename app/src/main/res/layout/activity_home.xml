<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Home">

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#910D0D"
        android:backgroundTint="#FAA4A4"
        android:baselineAligned="true"
        android:fadeScrollbars="false"
        android:forceDarkAllowed="false"
        android:gravity="top"
        android:scrollbarSize="25dp"
        android:touchscreenBlocksFocus="true">

        <TextView
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:fontFamily="cursive"
            android:paddingBottom="4dp"
            android:text="Fling"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="678dp"

        android:background="#FFFFFF">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dataList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F3000000"
            android:backgroundTint="#E4FCF7F7">


        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="66dp"

        android:background="#FAA4A4"

        android:orientation="horizontal">

        <Button
            android:id="@+id/home"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="14sp"
            android:background="@drawable/ic_home1"
            android:textSize="8sp" />

        <Button
            android:id="@+id/search"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="14sp"
            android:background="@drawable/ic_search2" />

        <Button
            android:id="@+id/chats"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="14sp"
            android:background="@drawable/ic_chat" />

        <Button
            android:id="@+id/profile"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="14sp"
            android:background="@drawable/ic_profile" />
    </LinearLayout>

</LinearLayout>