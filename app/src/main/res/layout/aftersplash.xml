<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme.NoActionBar"
    android:background="@drawable/ic_newbg"
    >
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="179dp"
        android:background="@drawable/ic_title" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="62dp"
        >
    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ic_loginbutton" />
    <TextView
        android:id="@+id/already_hav"
        android:layout_width="190dp"
        android:layout_height="28dp"
        android:layout_gravity="center"
        android:gravity="top"
        android:layout_marginTop="8dp"
        android:text="@string/already_hav"
        android:textAppearance="@style/already_hav" />

    <Button
        android:id="@+id/signup"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ic_signupbutton" />

    </LinearLayout>



</LinearLayout>